// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}





model User {
  id            String    @id @default(cuid()) @map("_id")
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

 
}



model Portfolio {
  id    String  @id @default(cuid()) @map("_id")
  slug  String  @unique
  description String?
  color String?
  title String
  img   String?
 
}


model Post {
  id      String    @id @default(cuid()) @map("_id")
  createdAt DateTime  @default(now())
  title    String
  desc      String
  img       String?
  views     Int       @default(0)
}

